<table name="products">
    <tr>

        <th width="15%">Titre</th>
        <th width="45%">Description</th>
        <th width="20%" style="text-align: center">Type</th>
        <th width="10%">Status</th>
        <th width="10%">Action</th>
        <th width="10%">Image</th>
    </tr>
    {% for product in products %}
    <tr>
        <td><strong>{{ product.getTitle() }}</strong></td>
        <td>{{ product.getDescription() }}</td>
        <td style="text-align: center">{{ product.getType().getName() }}</td>
        <td>{{ product.getState().getName() }}</td>
        <td><a href="{{ url('admineditproduct') }}{{ product.getId() }}" >Éditer</a></td>
        <td><a href="{{ url('fetchimage') }}?product_id={{ product.getId() }}" >Ajouter</a></td>
    </tr>
{% endfor %}
</table>
<hr />
<p>
    <a href="{{ url('admineditproduct') }}" >Ajouter un produit</a> |
    <a href="{{ url('admincategorieslist') }}">Listing catégories</a>

</p>
